<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/layout_half_padding"
    app:cardElevation="@dimen/layout_half_padding"
    app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgOwner"
            android:layout_width="90dp"
            android:layout_height="90dp"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNameRepository"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@sample/repositories.json/data/name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgOwner"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/layout_half_padding"
            android:layout_marginEnd="@dimen/layout_half_padding"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/layout_half_padding"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtDescriptionRepository"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/txtNameRepository"
            app:layout_constraintTop_toBottomOf="@+id/txtNameRepository"
            app:layout_constraintEnd_toEndOf="@id/txtNameRepository"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="@sample/repositories.json/data/description"
            />
        <com.google.android.material.chip.Chip
            android:id="@+id/cpStarRepository"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/txtDescriptionRepository"
            app:layout_constraintStart_toStartOf="@id/txtNameRepository"
            tools:text="@sample/repositories.json/data/stargazers_count"
            app:chipIcon="@drawable/ic_star"
            app:chipBackgroundColor="@color/white"
            app:chipIconTint="#FDD835"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtLanguageRepository"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/cpStarRepository"
            app:layout_constraintEnd_toEndOf="@id/txtNameRepository"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="@sample/repositories.json/data/language"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>